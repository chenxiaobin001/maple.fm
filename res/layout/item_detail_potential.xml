<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/potentialView"
    android:orientation="vertical" >
    
	<View
	    android:id="@+id/potentialSeparator"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#3d73a9"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/potentialTextView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

		<TextView
		    android:id="@+id/potentialTextView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

		<TextView
		    android:id="@+id/potentialTextView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

	</LinearLayout>

	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		<View
		    android:id="@+id/bonusPotentialSeparator"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#3d73a9"/>
<!-- 		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#3d73a9"
		    android:text="Additional Potential" /> -->

		<TextView
		    android:id="@+id/bonusPotentialTextView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

		<TextView
		    android:id="@+id/bonusPotentialTextView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

		<TextView
		    android:id="@+id/bonusPotentialTextView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" />

	</LinearLayout>
	
</LinearLayout>
